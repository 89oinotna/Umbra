<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mouse.MouseFragment">

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:id="@+id/btn_mouse_pad"
        android:layout_width="416dp"
        android:layout_height="666dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_mouse_left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#00ffffff"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_mouse_left"
        android:layout_width="195dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_mouse_right"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="#00ffffff"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_mouse_right"
        android:layout_width="195dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="@id/btn_mouse_left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_mouse_left"
        app:rippleColor="#00ffffff"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_mouse_wheel"
        android:layout_width="78dp"
        android:layout_height="320dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="169dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_mouse_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#00ffffff"/>


</androidx.constraintlayout.widget.ConstraintLayout>