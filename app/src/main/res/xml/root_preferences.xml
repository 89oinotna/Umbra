<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/mouse_header">

        <SeekBarPreference
            android:id="@+id/mouse_sensitivity"
            android:max="100"
            app:min="1"
            app:showSeekBarValue="true">

        </SeekBarPreference>
        <SeekBarPreference
            android:id="@+id/wheel_sensitivity"
            android:max="100"
            app:min="1"
            app:showSeekBarValue="true">

        </SeekBarPreference>


    </PreferenceCategory>


</PreferenceScreen>